@using Microsoft.AspNetCore.Mvc.Rendering
@model ReAl.Template.Lumino.Models.SegUsuarios

@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
	

@page
@using Aplicaciones
@using ReAl.Template.Lumino.Pages
@model Aplicaciones.CreateModel

@section Styles
{
    <!-- Sweetalert CSS -->
    <link href="~/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
}

<div class="row">
    <ol class="breadcrumb">
        <li><a href="#">
            <em class="fa fa-home"></em>
        </a></li>
        <li class="active">Aplicaciones</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Aplicaciones</h1>
    </div>
</div><!--/.row-->

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">Nuevo registro</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" method="post" id="CreateForm" class="form-horizontal row-border">
                            @Html.ValidationSummary(true, "", new {@class = "alert alert-danger"})
                            <div class="form-group">
                                <label asp-for="MiAplicacion.Descripcion"></label>
                                <input asp-for="MiAplicacion.Descripcion" class="form-control" id="Descripcion"></input>
                                <span asp-validation-for="MiAplicacion.Descripcion"></span>
                            </div>
                            <button type="submit" class="btn btn-default" onclick="Validate(this, event);">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <!-- Sweetalert JavaScript -->
    <script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
    
    <script>
        function validateData()  
        {  
    
            if ($("#Descripcion").val() == "")  
            {  
                swal("Ingrese Sigla Aplicacion !");  
                return false;  
            } else  
            {  
                return true;  
            }  
        }  
        
        function Validate(ctl, event)  
        {  
            event.preventDefault();  
            swal({  
                title: "Do you want to save it?",  
                text: "Please check Information before Submiting!",  
                type: "warning",  
                showCancelButton: true,  
                confirmButtonColor: "#DD6B55",  
                confirmButtonText: "Save",  
                cancelButtonText: "Cancel"
            }).then(function(isConfirm) {
                if (isConfirm.value)  
                {  
                    if (validateData() == true)   
                    {  
                        $("#CreateForm").submit();  
                    }  
                } else   
                {  
                    swal("Cancelled", "You have Cancelled Form Submission!", "error");  
                }  
            });  
        }  
    </script>
}

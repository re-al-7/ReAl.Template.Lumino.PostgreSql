}

<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Delete</h1>
	</div>
</div><!--/.row-->

<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<div class="panel-heading">¿Est&aacute; seguro que desea ELIMINAR &eacute;ste registro?</div>
<div class="panel-body">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SegRoles.Sigla)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SegRoles.Sigla)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SegRoles.Descripcion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SegRoles.Descripcion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SegRoles.Apiestado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SegRoles.Apiestado)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SegRoles.Apitransaccion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SegRoles.Apitransaccion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SegRoles.Usucre)
        </dt>
        <dd>

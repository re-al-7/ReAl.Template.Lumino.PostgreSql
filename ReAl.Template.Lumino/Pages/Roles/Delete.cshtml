        </dt>
        <dd>
            @Html.DisplayFor(model => model.SegRoles.Fecmod)
        </dd>
    </dl>
    
    <form role="form" method="post" id="DeleteForm" class="form-horizontal row-border">
        <input type="hidden" asp-for="SegRoles.Idsro" />
        <input type="submit" value="Eliminar registro" class="btn btn-default" onclick="Validate(this, event);"/> |
        <a asp-page="./Index">Volver</a>
    </form>
</div>
</div>
</div>
</div><!-- /.row -->

	@section Scripts
{
	<!-- Sweetalert JavaScript -->
	<script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
	
	<script>
		function Validate(ctl, event)
		{
			event.preventDefault();
			swal({
				title: "¿Seguro que desea ELIMINAR el registro?",
				text: "Verifique la información antes de aceptar!",
				type: "question",
				showCancelButton: true,
				confirmButtonColor: "#DD6B55",
				confirmButtonText: "Eliminar",
				cancelButtonText: "Cancelar"
			}).then(function(isConfirm) {
				if (isConfirm.value) {
					$("#DeleteForm").submit();
				} else {
					swal("Cancelled", "Se ha cancelado la accion", "error");
				}
			});
		}
	</script>
}	


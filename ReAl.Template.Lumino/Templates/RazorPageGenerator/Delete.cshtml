@inherits Microsoft.VisualStudio.Web.CodeGeneration.Templating.RazorTemplateBase
@using Microsoft.VisualStudio.Web.CodeGeneration.EntityFrameworkCore
@using System.Collections.Generic
@using System.Linq
@@page
@@model @Model.NamespaceName.@Model.PageModelClassName

@{
    if (Model.IsPartialView)
    {
    }
    else if (Model.IsLayoutPageSelected)
    {
@:@@section Styles
@:{
	@:<!-- Bootstrap-Table CSS -->
	@:<link href="~/lib/bootstrap-table/dist/bootstrap-table.min.css" rel="stylesheet">
	@:<!-- Sweetalert CSS -->
	@:<link href="~/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
@:}	
@:
@:@@{
    @:ViewData["Title"] = "@Model.ViewName";
        if (!string.IsNullOrEmpty(Model.LayoutPageFile))
        {
    @:Layout = "@Model.LayoutPageFile";
        }
@:}
@:
@:<div class="row">
	@:<div class="col-lg-12">
		@:<h1 class="page-header">@Model.ViewName</h1>
	@:</div>
@:</div><!--/.row-->
@:
    }
    else
    {
@:@@{
    @:Layout = null;
@:}
@:
@:<!DOCTYPE html>
@:
@:<html>
@:<head>
    @:<meta name="viewport" content="width=device-width" />
    @:<title>@Model.ViewName</title>
@:</head>
@:<body>
@:
        //    PushIndent("    ");
    }
}
<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<div class="panel-heading">¿Est&aacute; seguro que desea ELIMINAR &eacute;ste registro?</div>
<div class="panel-body">
    <dl class="dl-horizontal">
@{
    foreach (var property in Model.ModelMetadata.Properties)
    {
        if (property.Scaffold && !property.IsForeignKey && !property.IsPrimaryKey)
        {
        <dt>
            @@Html.DisplayNameFor(model => model.@(Model.ModelTypeName).@GetValueExpression(property))
        </dt>
        <dd>
            @@Html.DisplayFor(model => model.@(Model.ModelTypeName).@GetValueExpression(property))
        </dd>
        }
    }
    foreach (var navigation in Model.ModelMetadata.Navigations)
    {
        <dt>
            @@Html.DisplayNameFor(model => model.@(Model.ModelTypeName).@GetValueExpression(navigation))
        </dt>
        <dd>
            @@Html.DisplayFor(model => model.@(Model.ModelTypeName).@GetValueExpression(navigation).@navigation.DisplayPropertyName)
        </dd>
    }
    @:</dl>
    @:
    @:<form role="form" method="post" id="DeleteForm" class="form-horizontal row-border">
        foreach (var property in Model.ModelMetadata.Properties)
        {
            if(property.IsPrimaryKey){
        @:<input type="hidden" asp-for="@(Model.ModelTypeName).@GetValueExpression(property)" />
            }
        }
        @:<input type="submit" value="Eliminar registro" class="btn btn-default" onclick="Validate(this, event);"/> |
        @:<a asp-page="./Index">Volver</a>
    @:</form>
@:</div>

@:</div>
@:</div>
@:</div><!-- /.row -->
@:

    if (!Model.IsPartialView && !Model.IsLayoutPageSelected)
    {
        //ClearIndent();
@:</body>
@:</html>
    }
	
	@:@@section Scripts
@:{
	@:<!-- Sweetalert JavaScript -->
	@:<script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
	@:
	@:<script>
		@:function Validate(ctl, event)
		@:{
			@:event.preventDefault();
			@:swal({
				@:title: "¿Seguro que desea ELIMINAR el registro?",
				@:text: "Verifique la información antes de aceptar!",
				@:type: "question",
				@:showCancelButton: true,
				@:confirmButtonColor: "#DD6B55",
				@:confirmButtonText: "Eliminar",
				@:cancelButtonText: "Cancelar"
			@:}).then(function(isConfirm) {
				@:if (isConfirm.value) {
					@:$("#DeleteForm").submit();
				@:} else {
					@:swal("Cancelled", "Se ha cancelado la accion", "error");
				@:}
			@:});
		@:}
	@:</script>
@:}	
@:
}
@functions
{
    string GetValueExpression(IPropertyMetadata property)
    {
        return property.PropertyName;
    }

    string GetValueExpression(INavigationMetadata navigation)
    {
        return navigation.AssociationPropertyName;
    }
}